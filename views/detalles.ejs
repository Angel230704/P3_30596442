<body>
  <h1>Detalles</h1>
 <a href="/clientes">Volver</a>
   <div id='contenedor'>
  <% for(let m = 0;m < imagenes.length;m++){ %>
  <div style='display:flex;flex-direction: column;justify-content: center;align-items: center;'>

   <img src="<%= imagenes[m].url%>">

   <div style='display:flex;flex-direction: column;justify-content: center;align-items: center;'>
   <p><strong>Nombre :</strong><%= imagenes[m].nombre%></p>
   <p><strong>Codigo :</strong><%= imagenes[m].codigo%></p>
   <p><strong>Precio :</strong><span style='color:green'><%= imagenes[m].precio%>$</span></p>
   <p><strong>Descripcion :</strong><%= imagenes[m].descripcion%></p>
   <p><strong>Calidad :</strong><%= imagenes[m].calidad%></p>
   <p><strong>Cantidad :</strong><%= imagenes[m].cantidad%></p>
   <p><strong>Categoria :</strong><%= imagenes[m].categoria_id%></p>
   </div>

  </div>
  

  <% } %>

   </div>
  

